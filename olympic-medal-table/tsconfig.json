{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"  // 确保包含了 .vue 文件
  ],
  "exclude": ["node_modules"]
}

